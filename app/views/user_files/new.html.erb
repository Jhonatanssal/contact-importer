<div class="container pt-4 d-flex justify-content-center">
  <div class="card text-center w-50 shadow p-4">
    <div class="card-body">
      <h3 class="card-title">Upload File</h3>
    </div>
    <hr>
    <div class="card-body">
      <%= simple_form_for [current_user, @user_file], input_html: { multipart: true } do |f| %>

        <p>Please select which column belongs to which attribute:</p>

        <div class="form-group d-flex justify-content-between mt-3">
          <%= f.simple_fields_for :columns do |f| %>
            <div>
              <%= f.label :contact_name, "Name" %>
              <%= f.input :contact_name,
                          as: :select,
                          label: false,
                          collection: @columns.map { |c| [c[0], c[1]] },
                          input_html: { class: 'form-control mx-2' },
                          prompt: "-- Select --" %>
            </div>

            <%= f.input :email,
                        as: :select,
                        collection: @columns.map { |c| [c[0], c[1]] },
                        input_html: { class: 'form-control mx-2' },
                        prompt: "-- Select --" %>

            <%= f.input :phone,
                        as: :select,
                        collection: @columns.map { |c| [c[0], c[1]] },
                        input_html: { class: 'form-control mx-2' },
                        prompt: "-- Select --" %>
          </div>

          <div class="form-group d-flex justify-content-between mt-3">
            <%= f.input :address,
                        as: :select,
                        collection: @columns.map { |c| [c[0], c[1]] },
                        input_html: { class: 'form-control mx-2' },
                        prompt: "-- Select --" %>

            <%= f.input :date_of_birth,
                        as: :select,
                        collection: @columns.map { |c| [c[0], c[1]] },
                        input_html: { class: 'form-control mx-2' },
                        prompt: "-- Select --" %>

            <%= f.input :credit_card,
                        as: :select,
                        collection: @columns.map { |c| [c[0], c[1]] },
                        input_html: { class: 'form-control mx-2' },
                        prompt: "-- Select --" %>

            <%= f.input :franchise,
                        as: :select,
                        collection: @columns.map { |c| [c[0], c[1]] },
                        input_html: { class: 'form-control mx-2' },
                        prompt: "-- Select --" %>

          </div>
        <% end %>

        <div class="mt-3">
          <%= f.file_field :file, input_html: { class: 'form-control' } %>
        </div>

        <div class="mt-3">
          <%= f.submit "Upload", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
